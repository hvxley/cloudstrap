---

const canonicalURL = new URL(Astro.url);
const { title, description, ogPic } = Astro.props;
---
<meta charset="UTF-8" />
<meta name="description" content={description} />
<meta name="viewport" content="width=device-width, initial-scale=1" />
<link rel="icon" type="image/svg+xml" href="favicon/favicon.svg" />
<link rel="sitemap" href="/sitemap-index.xml" />
<link rel="canonical" href={canonicalURL} />
<link rel="manifest" href="manifest.json" />
<link rel="apple-touch-icon" sizes="70x69" href="/favicon/favicon-70x69.png" />
<link rel="apple-touch-icon" sizes="150x149" href="/favicon/favicon-150x149.png" />
<link rel="apple-touch-icon" sizes="310x308" href="/favicon/favicon-310x308.png" />
<link rel="apple-touch-icon" sizes="600x595" href="/favicon/favicon-600x595.png" />
<meta name="msapplication-TileColor" content="#212529" />
<meta name="msapplication-TileImage" content="/favicon/favicon-310x308.png" />
<meta name="msapplication-config" content="/browserconfig.xml" />
<meta name="theme-color" content="#aa87de" />
<meta property="og:type" content="website">
<meta property="og:url" content={canonicalURL}>
<meta property="og:title" content={title}>
<meta property="og:description" content={description}>
<meta property="og:image" content={ogPic}>
<meta property="twitter:card" content="summary_large_image">
<meta property="twitter:url" content={canonicalURL}>
<meta property="twitter:title" content={title}>
<meta property="twitter:description" content={description}>
<meta property="twitter:image" content={ogPic}>
<meta name="generator" content={Astro.generator} />
