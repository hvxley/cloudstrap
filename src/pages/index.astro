---
import '../styles/stylesheet.scss';
import bootstrap from "bootstrap/dist/js/bootstrap.bundle.min.js?url";
import ColorModeGraphics from '../components/ColorModeGraphics.astro';
import ColorModeButton from '../components/ColorModeButton.astro';
---

<html lang="en" data-bs-theme="auto">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="generator" content={Astro.generator} />
		<title>Astro</title>
    <script>import "../scripts/color-modes.ts";</script>
	</head>
	<body>
    <ColorModeGraphics />
	  <div class="container">
      <div class="row">
        <div class="col">
          <h1>Cloudstrap</h1>
        </div>
        <div class="col">
          <ColorModeButton />
        </div>
        <div class="col">
					<div class="d-flex gap-4 flex-wrap fs-1 mt-4 mb-5">
		        <div class="px-4 py-3 bg-dark rounded-2"><i class="bi bi-boombox text-primary"></i></div>
		        <div class="px-4 py-3 bg-light rounded-2"><i class="bi bi-twitter text-info"></i></div>
		        <div class="px-4 py-3 bg-dark rounded-2"><i class="bi bi-emoji-laughing text-warning"></i></div>
		        <div class="px-4 py-3 bg-light rounded-2"><i class="bi bi-inboxes-fill text-success"></i></div>
		        <div class="px-4 py-3 bg-dark rounded-2"><i class="bi bi-balloon-fill text-danger"></i></div>
		      </div>
        </div>
      </div>
    </div>

    <script src={bootstrap}></script>
	</body>
</html>
