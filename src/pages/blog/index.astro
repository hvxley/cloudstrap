---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => a.data.pubDate.valueOf() - b.data.pubDate.valueOf()
);
---
<Layout title="Cloudstrap Blog" description="Demonstration pages to inspire your creative writing." ogPic="https://huxley.cloud/arctic-fox.jpg">
  <main>
    <div class="bg-tertiary text-body px-4 py-5 text-left">
    <div class="py-5">
			<h1 class="display-5 fw-bold text-body text-center">Cloudstrap Blog</h1>
      <div class="mx-auto">
				<section>
					<ul class="list-group">
						{
							posts.map((post) => (
								<li class="mx-auto py-4" style="list-style-type: none;">
									<a class="list-group-item list-group-item-action" href={`/blog/${post.slug}/`}>
										<img width={500} height={250} src={post.data.heroImage} class="" alt="" />
										<h4 class="fs-4">{post.data.title}</h4>
										<p class="fs-5 text-secondary">{post.data.description}</p>
										<p class="fs-5 text-secondary">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</a>
								</li>
							))
						}
					</ul>
				</section>
			</div>
		</div>
	</main>
